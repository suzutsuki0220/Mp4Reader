# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
tab_width = 8

[*.{c,cpp,c++,cc}]
indent_style = space
indent_size = 4
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = outside
indent_brace_style = K&R

[*.{js,py}]
indent_style = space
indent_size = 4

[*.{md,yml}]
trim_trailing_whitespace = false  # 2 spaces means new-line

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
